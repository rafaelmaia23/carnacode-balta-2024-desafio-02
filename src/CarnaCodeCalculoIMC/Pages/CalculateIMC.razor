@page "/calculate-imc"
@using CarnaCodeCalculoIMC.Components

<PageTitle>Cálculo IMC</PageTitle>

<FormIMC OpenModal="ToggleModal" />

<ImcResultModal IsOpened="@IsModalOpen">
    <ModalBody>
        <_congratulations OnButtonClick="ToggleModal"></_congratulations>
    </ModalBody>
</ImcResultModal>

@code {
    [Parameter]
    public bool IsModalOpen { get; set; } = false;
    protected void ToggleModal()
    {
        if (IsModalOpen == false)
        {
            IsModalOpen = true;
        }
        else
        {
            IsModalOpen = false;
        }
    }
}