<div class="imc-result-modal @cssClass">
    <div class="imc-result-modal-content">
        <div class="imc-result-modal-body">
            @ModalBody;
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ModalBody { get; set; }
    [Parameter]
    public bool IsOpened { get; set; }
    string cssClass => IsOpened ? "show" : "hide";
}